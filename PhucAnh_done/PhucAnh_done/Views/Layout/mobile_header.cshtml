@using PhucAnh_done.Models
@{
    var phanLoaiTheoHang = ViewData["phanLoaiTheoHang"] as List<PhanLoaiTheoHangSp> ?? new List<PhanLoaiTheoHangSp>();
    var loaiDanhMucSanPham = ViewData["loaiDanhMucSanPham"] as List<LoaiDanhMucSanPham> ?? new List<LoaiDanhMucSanPham>();
    var loaiDMSP = ViewData["loaiDMSP"] as List<DanhMucSanPham> ?? new List<DanhMucSanPham>();
    var DanhMuc = ViewData["DanhMuc"] as List<PhanLoaiSanPham> ?? new List<PhanLoaiSanPham>();

}
<section>
    <div class="container header">
        <div class="row" id="IDheader">
            <!-- mobile -->
            <label for="nav_mobile_input" id="nav_mobile"><i class="fas fa-bars"></i></label>
            <input type="checkbox" hidden name="" class="nav_input" id="nav_mobile_input">
            <label for="nav_mobile_input" class="nav_overlay"></label>
            <nav class="nav__mobile">
                <div>
                    <h4 class="mobile_menu">Menu</h4>
                    <label for="nav_mobile_input" class="nav_mobile_close">
                        <i class="fas fa-times"></i>
                    </label>
                </div>

                <ul class="nav_list_mobile">
                    @foreach (var PhanLoaiDM in loaiDanhMucSanPham)
                    {
                        <li>
                            <label for="nav_mobile_child_input" class="nav_link_mobile" href="">
                                <a href="/productCategory/@PhanLoaiDM.DanhMucSanPhamPID">@PhanLoaiDM.TenLoaiDanhMucSanPham </a><i class="fas fa-chevron-right"></i>
                            </label>
                            <input type="checkbox" hidden name="" class="nav_child_input" id="nav_mobile_child_input">
                            <ul class="nav_list_child_mobile">
                                <div id="mobile_menu_child">
                                    <label for="nav_mobile_child_input" class="nav_mobile_child_close">
                                        <i class="fas fa-angle-double-left"></i>
                                    </label> 
                                    <h6 class="mobile_menu_child">@PhanLoaiDM.TenLoaiDanhMucSanPham</h6>

                                </div>
                                @foreach (var itemC in loaiDMSP.Where(x => x.DanhMucSanPhamPID == PhanLoaiDM.DanhMucSanPhamPID))
                                {
                                    <li>
                                        <label for="mobile_child_input" class="link_child_mobile" href="">
                                            <a href="/Category-product/@itemC.DanhMucSanPhamID">@itemC.TenDanhMucSanPham</a>
                                            <i class="fas fa-chevron-right"></i>
                                        </label>
                                        <input type="checkbox" hidden name="" class="child_input" id="mobile_child_input">
                                        <ul class="nav_child_mobile">
                                            <div id="mobile_menu_child">
                                                <h6 class="mobile_menu_child"> @itemC.TenDanhMucSanPham </h6>
                                                <label for="mobile_child_input" class="mobile_child_close">
                                                    <i class="fas fa-angle-double-left"></i>
                                                </label>
                                            </div>
                                            @foreach (var item in DanhMuc.Where(x => x.DanhMucSanPhamID == itemC.DanhMucSanPhamID))
                                            {
                                                <li>
                                                    <label for="mobile_child_input" class="nav_link_mobile" href="">@item.TenPhanLoaiSanPham</label>
                                                </li>
                                            }
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                </ul>

            </nav>
            <div id="banner">
                <a href="/" id="logo">
                    <img src="~/asset/client/image/banner/tải xuống.png" alt="">
                </a>
            </div>
            <div id="cart_mobile"><a href="/giohang"><i class="fas fa-cart-plus"></i><samp id="cart_mobileID">@ViewBag.SoLuong</samp></a></div>
            <!-- end mobile -->

            <div id="search">
                <div class="search">
                    <form action="/tim-kiem" , method="get">
                        <input type="text" name="Keyword" id="searchID" placeholder="Nhập từ khoá tìm kiếm...">
                    </form>
                </div>
            </div>
            <div id="phone">
                <a href="#">Gọi mua hàng:</a>
                <b>1900 2146</b>
            </div>
            <div id="cartID">
                <a id="cart-header" href="/giohang">
                    <i class="fas fa-shopping-cart"></i><span>Giỏ hàng </span><b>@ViewBag.SoLuong</b>
                </a>
            </div>
        </div>
        <!-- /* search mobile */ -->
        <div id="search_mobile">    
            <div class="search">
                <form action="">
                    <input type="search" id="searchID" placeholder="Nhập từ khoá tìm kiếm..." />
                </form>
            </div>
        </div>
        <!-- end search mobile -->
    </div>
</section>
