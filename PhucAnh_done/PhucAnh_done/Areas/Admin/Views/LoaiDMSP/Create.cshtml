@model PhucAnh_done.Models.LoaiDanhMucSanPham
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="content container col-md-6">
    @using (Html.BeginForm("Create", "LoaiDMSP", FormMethod.Post))
    {
        <div class="form-horizontal">
            <h4 style="text-align:center;color:blue">Thêm loại danh mục sản phẩm</h4>
            <hr />
            <div class="form-group">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @if (ViewBag.Success != null)
                {
                    <div class="alert alert-success">@ViewBag.Success</div>}
            </div>

            <div class="form-group">
                @Html.LabelFor(model=>model.TenLoaiDanhMucSanPham, new { @class = " col-md-5" })
                <div class="col-md-7">
                    @Html.TextBoxFor(model => model.TenLoaiDanhMucSanPham, new { required = true, @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TenLoaiDanhMucSanPham, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.status, htmlAttributes: new { @class = " col-md-6" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control col-md-7" } })
                    @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.ActionLink("Quay lại trang trước", "Index")
</div>
