             @Html.LabelFor(model => model.Máy_tính_đồng_bộ, htmlAttributes: new { @class = " col-md-3" })
             <div class="col-md-5">
                 <div class="checkbox">
                     @Html.EditorFor(model => model.Máy_tính_đồng_bộ)
                     @Html.ValidationMessageFor(model => model.Máy_tính_đồng_bộ, "", new { @class = "text-danger" })
                 </div>
             </div>
         </div>

