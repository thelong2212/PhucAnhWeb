@model PhucAnh_done.Models.DanhMucSanPham
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<<div class="content container col-md-6">

    @using (Html.BeginForm("Create", "DanhMucSanPham", FormMethod.Post))
    {
     <div class="form-horizontal">
         <h4 style="text-align:center;color:blue">Tạo mới Danh Mục Sản Phẩm</h4>
         <hr />
         <div class="form-group">
             @Html.ValidationSummary(false, "", new { @class = "text-danger" })
             @if (ViewBag.Success != null)
             {
                 <div class="alert alert-success">@ViewBag.Success</div>}
         </div>

         <div class="form-group">
             @Html.LabelFor(model => model.TenDanhMucSanPham, new { @class = " col-md-4" })
             <div class="col-md-6">
                 @Html.TextBoxFor(model => model.TenDanhMucSanPham, new { required = true, @class = "form-control" })
                 @Html.ValidationMessageFor(model => model.TenDanhMucSanPham, "", new { @class = "text-danger" })
             </div>
         </div>

         <div class="form-group">
             @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = " col-md-2" })
             <div class="col-md-10">
                 @Html.TextBoxFor(model => model.GhiChu, new { type = "date", htmlAttributes = new { @class = "form-control" }, Styles = " margin-left: 80px;" })
                 @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
             </div>
         </div>

         <div class="form-group">
             @Html.LabelFor(model => model.Laptop___Linh_phụ_kiện, htmlAttributes: new { @class = " col-md-3" })
             <div class="col-md-5">
                 <div class="checkbox">
                     @Html.EditorFor(model => model.Laptop___Linh_phụ_kiện)
                     @Html.ValidationMessageFor(model => model.Laptop___Linh_phụ_kiện, "", new { @class = "text-danger" })
                 </div>
             </div>
         </div>

         <div class="form-group">
             @Html.LabelFor(model => model.Điện_thoại__Tavlet___Phụ_kiện, htmlAttributes: new { @class = " col-md-3" })
             <div class="col-md-5">
                 <div class="checkbox">
                     @Html.EditorFor(model => model.Điện_thoại__Tavlet___Phụ_kiện)
                     @Html.ValidationMessageFor(model => model.Điện_thoại__Tavlet___Phụ_kiện, "", new { @class = "text-danger" })
                 </div>
             </div>
         </div>

         <div class="form-group">
             @Html.LabelFor(model => model.Server___Workstation, htmlAttributes: new { @class = " col-md-3" })
