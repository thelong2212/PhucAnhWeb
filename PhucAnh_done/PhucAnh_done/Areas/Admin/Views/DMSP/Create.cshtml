                 </div>
             </div>
         </div>

         <div class="form-group">
             @Html.LabelFor(model => model.PC_chơi_Game__Gaming_Gear, htmlAttributes: new { @class = " col-md-3" })
             <div class="col-md-5">
                 <div class="checkbox">
                     @Html.EditorFor(model => model.PC_chơi_Game__Gaming_Gear)
                     @Html.ValidationMessageFor(model => model.PC_chơi_Game__Gaming_Gear, "", new { @class = "text-danger" })
                 </div>
             </div>
         </div>

         <div class="form-group">
             @Html.LabelFor(model => model.Laptop_theo_khoảng_tiền, htmlAttributes: new { @class = " col-md-3" })
             <div class="col-md-5">
                 <div class="checkbox">
                     @Html.EditorFor(model => model.Laptop_theo_khoảng_tiền)
