                 </div>
             </div>
         </div>

         <div class="form-group">
             @Html.LabelFor(model => model.Phụ_kiện_máy_tính___nghe_nhìn, htmlAttributes: new { @class = " col-md-3" })
             <div class="col-md-5">
                 <div class="checkbox">
                     @Html.EditorFor(model => model.Phụ_kiện_máy_tính___nghe_nhìn)
                     @Html.ValidationMessageFor(model => model.Phụ_kiện_máy_tính___nghe_nhìn, "", new { @class = "text-danger" })
                 </div>
             </div>
         </div>

