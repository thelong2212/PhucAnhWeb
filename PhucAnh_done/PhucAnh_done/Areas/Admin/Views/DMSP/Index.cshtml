@model PagedList.IPagedList<PhucAnh_done.Models.DanhMucSanPham>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Khách Hàng</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh Mục Sản Phẩm</h6>
        </div>
        <div class="card-body">
            <div class="panel-body">
                @using (Html.BeginForm("Index", "DMSP", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4" style="padding-left: 0px;">
                                <input type="text" value="@ViewBag.Keyword" class="form-control" name="Keyword" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                                <a class="btn btn-primary" href="/Admin/DMSP/Create">Thêm mới</a>
                            </div>
                        </div>
                    </div>}
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên danh mục sản phẩm</th>
                                <th>Ghi chú</th>
                                <th>Laptop &Aacute; Linh phụ kiện/th>
                                <th>Điện thoại, Tavlet & Phụ kiện </th>
                                <th>Server &Aacute; Workstation</th>
                                <th>PC chơi Game, Gaming Gear</th>
                                <th>Laptop theo khoảng tiền</th>
                                <th>Linh kiện máy tính</th>
                                <th>Phụ kiện máy tính & nghe nhìn</th>
                                <th>Màn hình máy tính</th>
                                <th>Máy tính đồng bộ</th>
                                <th>Thiết bị văn phòng</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr id="row_@item.DanhMucSanPhamID">
                                <td>@item.TenDanhMucSanPham</td>
                                <td>@item.GhiChu</td>
                                <td>
                                    @{ if (item.Laptop___Linh_phụ_kiện == true)
                                        {
                                            <span>X</span> }
                                        else
                                        {
                                            <span></span> } }
                                </td>
                                <td>
                                    @{ if (item.Điện_thoại__Tavlet___Phụ_kiện == true)
                                        {
                                            <span>X</span> }
                                        else
                                        {
                                            <span></span> } }
                                </td>
                                <td>
                                    @{ if (item.Server___Workstation == true)
                                        {
                                            <span>X</span> }
                                        else
                                        {
                                            <span></span> } }
                                </td>
                                <td>
                                    @{ if (item.PC_chơi_Game__Gaming_Gear == true)
                                        {
                                            <span>X</span> }
                                        else
                                        {
                                            <span></span> } }
                                </td>
                                <td>
                                    @{ if (item.Laptop_theo_khoảng_tiền == true)
                                        {
                                            <span>X</span> }
                                        else
                                        {
                                            <span></span> } }
                                </td>
                                <td>
                                    @{ if (item.Linh_kiện_máy_tính == true)
                                        {
                                            <span>X</span> }
                                        else
                                        {
                                            <span></span> } }
                                </td>
                                <td>
                                    @{ if (item.Phụ_kiện_máy_tính___nghe_nhìn == true)
                                        {
                                            <span>X</span> }
                                        else
                                        {
                                            <span></span> } }
                                </td>
                                <td>
                                    @{ if (item.Màn_hình_máy_tính == true)
                                        {
                                            <span>X</span> }
                                        else
                                        {
                                            <span></span> } }
                                </td>
                                <td>
                                    @{ if (item.Máy_tính_đồng_bộ == true)
                                        {
                                            <span>X</span> }
                                        else
                                        {
                                            <span></span> } }
                                </td>
                                <td>
                                    @{ if (item.Thiết_bị_văn_phòng == true)
                                        {
                                            <span>X</span> }
                                        else
                                        {
                                            <span></span> } }
                                </td>

                                <td>
                                    <a href="/Admin/DMSP/Edit/@item.DanhMucSanPhamID">Cập nhật</a>
                                    <a href="#">/</a>
                                    @Ajax.ActionLink("Xoá", "Delete", new { @id = item.DanhMucSanPhamID }, new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xoá bản ghi này?",
                                   OnComplete = "$('#row_" + @item.DanhMucSanPhamID + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, Keyword = @ViewBag.Keyword }))
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>

</div>

